{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "appInsightsName": {
      "type": "string"
    },
    "openAiEndpoint": {
      "type": "string"
    },
    "openAiApiKey": {
      "type": "securestring"
    }
  },
  "variables": {
    "apimServiceName": "[concat('apim-', uniqueString(subscription().subscriptionId, resourceGroup().id))]"
  },
  "resources": [
    {
      "type": "Microsoft.ApiManagement/service",
      "name": "[variables('apimServiceName')]",
      "apiVersion": "2020-06-01-preview",
      "location": "[resourceGroup().location]",
      "sku": {
        "name": "Consumption",
        "capacity": 0
      },
      "properties": {
        "publisherEmail": "info@example.com",
        "publisherName": "Your Company",
        "backend": {
          "url": "[parameters('openAiEndpoint')]",
          "credentials": {
            "header": {
              "Authorization": [
                "[concat('Bearer ', parameters('openAiApiKey'))]"
              ]
            }
          }
        }
      }
    },
    {
      "type": "Microsoft.Insights/components",
      "apiVersion": "2020-02-02-preview",
      "name": "[parameters('appInsightsName')]",
      "location": "[resourceGroup().location]",
      "kind": "web",
      "properties": {
        "Application_Type": "web",
        "Request_Source": "rest"
      }
    },
    {
      "type": "Microsoft.ApiManagement/service/diagnostics",
      "name": "[concat(variables('apimServiceName'), '/applicationinsights')]",
      "apiVersion": "2020-06-01-preview",
      "dependsOn": [
        "[resourceId('Microsoft.ApiManagement/service', variables('apimServiceName'))]",
        "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]"
      ],
      "properties": {
        "alwaysLog": "allErrors",
        "loggerId": "[resourceId('Microsoft.Insights/components', parameters('appInsightsName'))]",
        "sampling": {
          "percentage": 100
        },
        "httpCorrelationProtocol": "W3C",
        "enableHttpCorrelationHeaders": true
      }
    }
  ],
  "outputs": {
    "apimGatewayUrl": {
      "type": "string",
      "value": "[reference(variables('apimServiceName')).gatewayUrl]"
    }
  }
}
